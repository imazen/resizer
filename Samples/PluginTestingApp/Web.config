    <licenses>
      <local use="imageresizing.net" />
      <auto appId="629c0f81-5e96-4794-a1cc-378e375ef222" />
    </licenses>
    <watermarks>
      <otherimages path="~/watermarks" right="20" bottom="20" width="20" height="20" />
